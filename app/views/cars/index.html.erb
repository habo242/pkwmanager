<h1>Listing cars</h1>

<table>
  <thead>
    <tr>
      <th>Manufactor/</th>
      <th>Marque</th>
      <th>Model</th>
      <th>Milage</th>
      <th>MOT</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @car.each do |car| %>
      <tr>

        <td><%= car.manufactor %>
        <td><%= car.marque %></td>
        <td><%= car.model %></td>
        <td><%= car.milage %></td>
        <td><%= car.MOT %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

